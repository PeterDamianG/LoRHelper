<Window x:Class="LoRHelper.CardModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Card Info LoR Helper" 
    Height="500" 
    Width="300" 
    Topmost="True" 
    WindowStyle="None"        
    WindowStartupLocation="CenterScreen"
    Background="Transparent"
    Icon="/Resources/LoRHelperIcon192x192.ico"
    MouseLeftButtonDown="DragWindowCard">
    <!---Grid.-->
    <Grid>
        <!---Call image card.-->
        <Image x:Name="CardImage" Stretch="Fill"/>
        <!---Close Button. -->
        <Button Width="48" Height="48" Content="X" Click="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</Window>